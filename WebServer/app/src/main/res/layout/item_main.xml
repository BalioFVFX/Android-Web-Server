<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingHorizontal="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_req_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Method: GET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_req_endpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/Home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_req_method"
        android:layout_marginStart="8dp"
        />

    <TextView
        android:id="@+id/tv_req_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.12.2021 13:00PM"
        app:layout_constraintTop_toBottomOf="@id/tv_req_endpoint"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_response_headers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_req_timestamp"
        android:layout_marginTop="16dp"
        android:textAlignment="textEnd"
        android:text="HTML"
        />

    <TextView
        android:id="@+id/tv_response_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_response_headers"
        android:layout_marginTop="8dp"
        android:text="12.01.2022 12:00PM"
        android:textAlignment="textEnd"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#A496BC"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_response_time"
        />

</androidx.constraintlayout.widget.ConstraintLayout>